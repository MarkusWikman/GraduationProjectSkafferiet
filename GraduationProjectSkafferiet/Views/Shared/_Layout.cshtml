<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Skafferiet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark" asp-controller="Skafferiet" asp-action="Logout">Sign out</a>
                    }
                    @RenderSection("navbutton", false)
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
